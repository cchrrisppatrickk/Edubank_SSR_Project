                left: auto;
                right: 0;
                border-right: none;
                border-left: 5px solid transparent;
                border-top: 4px solid #157347;
                bottom: -4px;
            }

        .message.new {
            transform: scale(0);
            transform-origin: 0 0;
            animation: bounce 0.4s ease both;
        }

