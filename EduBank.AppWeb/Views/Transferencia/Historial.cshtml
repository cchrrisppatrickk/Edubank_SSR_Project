@model IEnumerable<EduBank.Models.Transferencia>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Historial de Transferencias - EduBank</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(180deg, #f0f4ff, #ffffff);
            font-family: 'Inter', 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        .section-title {
            position: relative;
            font-weight: 700;
            color: #1f2937;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .section-title::after {
                content: "";
                position: absolute;
                bottom: -6px;
                left: 0;
                width: 45%;
                height: 3px;
                background: linear-gradient(90deg, #0d6efd, #3b82f6);
                border-radius: 4px;
            }

        .card {
            border: none;
            border-radius: 18px;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(6px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

        .transferencia-item {
            border-left: 4px solid #198754;
            background: #f8fff8;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

            .transferencia-item:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(25, 135, 84, 0.1);
            }

        .transferencia-revertida {
            border-left-color: #6c757d;
            background: #f8f9fa;
            opacity: 0.7;
        }

        .monto-transferencia {
            font-size: 1.25rem;
            font-weight: 700;
        }

        .fecha-transferencia {
            font-size: 0.875rem;
            color: #6c757d;
        }

        .comentario-transferencia {
            font-style: italic;
            color: #495057;
            border-left: 2px solid #dee2e6;
            padding-left: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <!-- CABECERA -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">
                <i class="bi bi-clock-history text-primary"></i> Historial de Transferencias
            </h2>
            <div>
                <button class="btn btn-primary me-2" onclick="window.location.href='/Cuenta'">
                    <i class="bi bi-arrow-left me-1"></i>Volver a Cuentas
                </button>
            </div>
        </div>

        <!-- CONTADOR -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div></div>
            <span class="badge bg-gradient text-dark fs-6 px-3 py-2" id="contadorTransferencias">
                @Model.Count() @(Model.Count() == 1 ? "transferencia" : "transferencias")
            </span>
        </div>

        <!-- LISTA DE TRANSFERENCIAS -->
        <div id="listaTransferencias">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-arrow-left-right text-muted fs-1"></i>
                    <h5 class="mt-3 text-muted">No hay transferencias registradas</h5>
                    <p class="text-muted">Realiza tu primera transferencia entre cuentas</p>
                    <button class="btn btn-primary mt-2" onclick="window.location.href='/Transferencia'">
                        <i class="bi bi-plus-circle me-1"></i>Crear Primera Transferencia
                    </button>
                </div>
            }
            else
            {
                foreach (var transferencia in Model.OrderByDescending(t => t.FechaTransferencia))
                {
                    <div class="card transferencia-item">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-arrow-up-right text-success me-2"></i>
                                        <h6 class="mb-0 fw-bold">De: @transferencia.CuentaOrigen?.Nombre</h6>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-arrow-down-left text-primary me-2"></i>
                                        <h6 class="mb-0 fw-bold">A: @transferencia.CuentaDestino?.Nombre</h6>
                                    </div>
                                    <div class="fecha-transferencia mt-2">
                                        <i class="bi bi-calendar me-1"></i>
                                        @transferencia.FechaTransferencia.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                    @if (!string.IsNullOrEmpty(transferencia.Comentario))
                                    {
                                        <div class="comentario-transferencia mt-2">
                                            <i class="bi bi-chat-text me-1"></i>
                                            @transferencia.Comentario
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="monto-transferencia text-success">
                                        @transferencia.Monto.ToString("C", new System.Globalization.CultureInfo("es-PE"))
                                    </div>
                                    <div class="text-muted small">Monto transferido</div>
                                </div>
                                <div class="col-md-2 text-end">
                                    <button class="btn btn-outline-danger btn-sm"
                                            onclick="revertirTransferencia(@transferencia.TransferenciaId)"
                                            title="Revertir transferencia">
                                        <i class="bi bi-arrow-counterclockwise"></i> Revertir
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- MODAL DE CONFIRMACIÓN -->
    <div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Reversión</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalConfirmacionBody">
                    ¿Estás seguro de que deseas revertir esta transferencia?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="btnConfirmarReversion">Revertir</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        let transferenciaAReversion = null;

        function revertirTransferencia(transferenciaId) {
            transferenciaAReversion = transferenciaId;
            $('#modalConfirmacion').modal('show');
        }

                $('#btnConfirmarReversion').click(async function() {
            if (!transferenciaAReversion) return;

            const btn = $(this);
            const originalText = btn.html();

            try {
                btn.prop('disabled', true).html('<i class="bi bi-hourglass-split me-1"></i>Procesando...');

                // ✅ CORREGIDO: Enviar solo el ID como parámetro en la URL
                const response = await fetch(`/Transferencia/RevertirTransferencia?id=${transferenciaAReversion}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                    // ❌ Eliminamos el body ya que el ID va en la URL
                });

                const resultado = await response.json();

                if (resultado.success) {
                    toastr.success(resultado.message);
                    $('#modalConfirmacion').modal('hide');
                    // Recargar la página para mostrar los cambios
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    throw new Error(resultado.message);
                }
            } catch (error) {
                toastr.error('Error al revertir transferencia: ' + error.message);
            } finally {
                btn.prop('disabled', false).html(originalText);
                transferenciaAReversion = null;
            }
        });

        // Cerrar modal al hacer click fuera de él
        $('#modalConfirmacion').on('hidden.bs.modal', function() {
            transferenciaAReversion = null;
        });
    </script>
</body>
</html>