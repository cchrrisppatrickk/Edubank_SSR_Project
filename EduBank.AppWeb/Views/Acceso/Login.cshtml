@model EduBank.Models.ViewModel.LoginViewModel
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión - EduBank</title>

    <!-- Fuentes y estilos -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"   />

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --accent-color: #4cc9f0;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --success-color: #4bb543;
            --danger-color: #dc3545;
            --gradient-primary: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
            --gradient-accent: linear-gradient(135deg, #4cc9f0 0%, #4361ee 100%);
            --shadow-light: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-medium: 0 10px 15px rgba(0, 0, 0, 0.1);
            --shadow-strong: 0 20px 25px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--gradient-primary);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        /* Elementos decorativos de fondo */
        .bg-shape-1, .bg-shape-2, .bg-shape-3 {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            z-index: 0;
        }

        .bg-shape-1 {
            width: 300px;
            height: 300px;
            top: -150px;
            right: -100px;
        }

        .bg-shape-2 {
            width: 200px;
            height: 200px;
            bottom: -80px;
            left: -80px;
        }

        .bg-shape-3 {
            width: 150px;
            height: 150px;
            bottom: 20%;
            right: 10%;
        }

        .login-container {
            width: 100%;
            max-width: 1000px;
            z-index: 1;
        }

        .login-card {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow-strong);
            border: none;
            background: white;
        }

        .login-content {
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
        }

        .login-image {
            background: var(--gradient-accent);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            position: relative;
            overflow: hidden;
        }

            .login-image img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                box-shadow: var(--shadow-medium);
                z-index: 1;
            }

            .login-image::before {
                content: '';
                position: absolute;
                width: 200px;
                height: 200px;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.1);
                top: -50px;
                right: -50px;
            }

            .login-image::after {
                content: '';
                position: absolute;
                width: 150px;
                height: 150px;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.1);
                bottom: -30px;
                left: -30px;
            }

        .logo-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            font-size: 3rem;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .login-title {
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 5px;
        }

        .login-subtitle {
            color: #6c757d;
            font-weight: 400;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 5;
        }

        .form-control {
            padding-left: 45px;
            height: 50px;
            border-radius: 10px;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
            font-weight: 500;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.25);
            }

        .btn-login {
            background: var(--gradient-primary);
            border: none;
            color: white;
            height: 50px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
            box-shadow: var(--shadow-light);
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-medium);
            }

        .alert-custom {
            border-radius: 10px;
            border: none;
            padding: 12px 15px;
        }

        .register-link {
            color: var(--primary-color);
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s;
        }

            .register-link:hover {
                color: var(--secondary-color);
                text-decoration: underline;
            }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            z-index: 5;
        }

            .password-toggle:hover {
                color: var(--primary-color);
            }

        /* Animaciones */
        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        .floating {
            animation: float 5s ease-in-out infinite;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .login-content {
                padding: 30px 20px;
            }

            .login-image {
                display: none;
            }


        }

    </style>
</head>

<body>
    <!-- Elementos decorativos de fondo -->
    <div class="bg-shape-1"></div>
    <div class="bg-shape-2"></div>
    <div class="bg-shape-3"></div>

    <div class="login-container" data-aos="zoom-in">
        <div class="card login-card">
            <div class="row g-0">
                <!-- Columna del formulario -->
                <div class="col-lg-6">
                    <div class="login-content">
                        <div class="logo-container">
                            <i class="bi bi-piggy-bank-fill logo-icon"></i>
                            <h1 class="login-title">EduBank</h1>
                            <p class="login-subtitle">Tu futuro financiero empieza aquí</p>
                        </div>

                        <form asp-controller="Acceso" asp-action="Login" method="post">
                            <div class="form-group">
                                <i class="bi bi-envelope-fill input-icon"></i>
                                <input class="form-control" type="email" placeholder="Correo Electrónico" asp-for="CorreoElectronico" required />
                                <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <i class="bi bi-lock-fill input-icon"></i>
                                <input id="password-field" class="form-control" type="password" placeholder="Contraseña" asp-for="Contrasena" required />
                                <button type="button" class="password-toggle" id="password-toggle">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <span asp-validation-for="Contrasena" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-login w-100">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                                </button>
                            </div>

                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger alert-custom mt-3" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewData["Mensaje"]
                                </div>
                            }

                            <div class="text-center mt-4">
                                <span class="text-muted">¿No tienes una cuenta?</span>
                                <a class="register-link ms-1" asp-controller="Acceso" asp-action="Registrarse">Regístrate aquí</a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Columna de la imagen -->
                <div class="col-lg-6 login-image">
                    <img src="~/img/card.png" alt="Ahorro educativo" class="floating" />
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Inicializar AOS
        AOS.init({ duration: 1000, once: true });

        // Toggle para mostrar/ocultar contraseña
        document.getElementById('password-toggle').addEventListener('click', function() {
            const passwordField = document.getElementById('password-field');
            const icon = this.querySelector('i');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    </script>
</body>
</html>
