@model EduBank.Models.ViewModel.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - EduBank</title>

    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
</head>

<body>
    <div class="login-bg">
        

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10" data-aos="zoom-in">
                    <div class="card login-card">
                        <div class="row g-0">

                            <div class="col-md-6 p-4 d-flex flex-column justify-content-center">
                                <div class="text-center mb-3">
                                    <lord-icon src="https://cdn.lordicon.com/ifqjzyby.json"
                                               trigger="hover"
                                               colors="primary:#0017c9,secondary:#e9ba04"
                                               style="width:80px;height:80px">
                                    </lord-icon>
                                    <h2 class="login-title mt-2">EduBank</h2>
                                    <p class="login-subtitle">Tu futuro financiero empieza aquí</p>
                                </div>

                                <form asp-controller="Acceso" asp-action="Login" method="post">
                                    <div class="mb-3 input-group cartoon-input">
                                        <span class="input-group-text">
                                            <i class="bi bi-envelope-fill"></i>
                                        </span>
                                        <input class="form-control" type="email" placeholder="Correo Electrónico" asp-for="CorreoElectronico" required />
                                    </div>
                                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>

                                    <div class="mb-3 input-group cartoon-input">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock-fill"></i>
                                        </span>
                                        <input class="form-control" type="password" placeholder="Contraseña" asp-for="Contrasena" required />
                                    </div>
                                    <span asp-validation-for="Contrasena" class="text-danger"></span>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                                        </button>
                                    </div>

                                    @if (ViewData["Mensaje"] != null)
                                    {
                                        <div class="alert alert-danger mt-3" role="alert">
                                            @ViewData["Mensaje"]
                                        </div>
                                    }

                                    <div class="text-center mt-3">
                                        ¿No tienes una cuenta?
                                        <a asp-controller="Acceso" asp-action="Registrarse">Regístrate aquí</a>
                                    </div>
                                </form>
                            </div>

                            <div class="col-md-6 login-image d-none d-md-block">
                                <img src="~/img/card.png" alt="Ahorro educativo" class="img-fluid h-100 w-100" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.lordicon.com/lordicon.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 1000, once: true });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
