@model EduBank.Models.ViewModel.RegistroViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrarse - EduBank</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"   />

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --accent-color: #4cc9f0;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --gradient-primary: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
            --gradient-accent: linear-gradient(135deg, #4cc9f0 0%, #4361ee 100%);
            --shadow-light: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-medium: 0 10px 15px rgba(0, 0, 0, 0.1);
            --shadow-strong: 0 20px 25px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--gradient-primary);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        /* Elementos decorativos de fondo */
        .bg-shape-1, .bg-shape-2, .bg-shape-3 {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            z-index: 0;
        }

        .bg-shape-1 {
            width: 300px;
            height: 300px;
            top: -150px;
            right: -100px;
        }

        .bg-shape-2 {
            width: 200px;
            height: 200px;
            bottom: -80px;
            left: -80px;
        }

        .bg-shape-3 {
            width: 150px;
            height: 150px;
            bottom: 20%;
            right: 10%;
        }

        .login-container {
            width: 100%;
            max-width: 1000px; /* Ancho más grande para las dos columnas */
            z-index: 1;
        }

        .login-card {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow-strong);
            border: none;
            background: white;
        }

        .login-content {
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
        }

        /* Columna de la imagen (Recuperada del diseño original) */
        .login-image {
            background: var(--gradient-accent);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            position: relative;
            overflow: hidden;
        }

            .login-image img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                box-shadow: var(--shadow-medium);
                z-index: 1;
            }

            .login-image::before {
                content: '';
                position: absolute;
                width: 200px;
                height: 200px;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.1);
                top: -50px;
                right: -50px;
            }

            .login-image::after {
                content: '';
                position: absolute;
                width: 150px;
                height: 150px;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.1);
                bottom: -30px;
                left: -30px;
            }
        /* Fin de estilos de la columna de imagen */

        /* Header y Títulos */
        .header-content {
            text-align: center;
            margin-bottom: 30px;
        }

        .header-icon {
            font-size: 3.5rem;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .header-title {
            font-weight: 700;
            font-size: 2.2rem;
            color: var(--primary-color);
            margin-bottom: 5px;
        }

        .header-subtitle {
            color: #6c757d;
            font-weight: 400;
        }

        /* Step Indicator (1 — 2) */
        .step-indicator {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
        }

        .step-circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: #6c757d;
            background-color: #e9ecef;
            transition: all 0.3s;
            font-size: 0.9rem;
        }

            .step-circle.active {
                color: white;
                background: var(--primary-color);
            }

        .step-line {
            width: 30px;
            height: 2px;
            background-color: #e9ecef;
            margin: 0 8px;
            transition: background-color 0.3s;
        }

            .step-line.completed {
                background-color: var(--primary-color);
            }

        /* Input Styles (Minimalista, similar a la imagen) */
        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-control {
            padding: 10px 15px 10px 45px;
            height: 50px;
            border-radius: 10px;
            border: 1px solid #e9ecef;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            font-weight: 400;
            color: var(--dark-color);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.1rem rgba(67, 97, 238, 0.25);
            }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #afafaf;
            z-index: 5;
            font-size: 1.1rem;
        }

        /* Botones de Acción */
        .btn-action {
            background: var(--gradient-primary);
            border: none;
            color: white;
            height: 50px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-action:hover {
                opacity: 0.9;
                transform: translateY(-1px);
            }

        .btn-secondary-outline {
            background: transparent;
            color: var(--primary-color);
            border: 1px solid var(--primary-color);
            font-weight: 600;
            border-radius: 10px;
        }

        .form-step {
            display: none;
        }

            .form-step.active {
                display: block;
            }

        /* Animaciones */
        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }

            100% {
                transform: translateY(0px);
            }
        }

        .floating {
            animation: float 5s ease-in-out infinite;
        }

        /* Responsive */
        @@media (max-width: 992px) { /* La imagen se oculta en tabletas/móviles */
            .login-image {
                display: none !important;
            }


        }

    </style>
</head>

<body>
    <div class="bg-shape-1"></div>
    <div class="bg-shape-2"></div>
    <div class="bg-shape-3"></div>

    <div class="login-container" data-aos="zoom-in">
        <div class="card login-card">
            <div class="row g-0">

                <div class="col-lg-6">
                    <div class="login-content">

                        <div class="header-content">
                            <i class="bi bi-person-plus-fill header-icon"></i>
                            <h1 class="header-title">Crea tu cuenta</h1>
                            <p class="header-subtitle">Forma parte de *EduBank* 💰</p>
                        </div>

                        <div class="step-indicator">
                            <div id="step-1-circle" class="step-circle active">1</div>
                            <div id="step-1-line" class="step-line"></div>
                            <div id="step-2-circle" class="step-circle">2</div>
                        </div>

                        <form asp-controller="Acceso" asp-action="Registrarse" method="post" id="registrationForm" novalidate>

                            <div id="step-1" class="form-step active">

                                <div class="form-group">
                                    <i class="bi bi-person-fill input-icon"></i>
                                    <input class="form-control" type="text" placeholder="Nombre" asp-for="Nombre" required />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <i class="bi bi-person-lines-fill input-icon"></i>
                                    <input class="form-control" type="text" placeholder="Apellidos" asp-for="Apellidos" required />
                                    <span asp-validation-for="Apellidos" class="text-danger small"></span>
                                </div>

                                <div class="d-grid mt-4">
                                    <button type="button" class="btn btn-action w-100" onclick="nextStep(1)">
                                        Siguiente <i class="bi bi-arrow-right-short ms-2"></i>
                                    </button>
                                </div>
                            </div>

                            <div id="step-2" class="form-step">

                                <div class="form-group">
                                    <i class="bi bi-envelope-fill input-icon"></i>
                                    <input class="form-control" type="email" placeholder="Correo electrónico" asp-for="CorreoElectronico" required />
                                    <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <i class="bi bi-lock-fill input-icon"></i>
                                    <input id="password-field-reg" class="form-control" type="password" placeholder="Contraseña" asp-for="Contrasena" required />
                                    <button type="button" class="password-toggle" id="password-toggle-reg">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <span asp-validation-for="Contrasena" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <i class="bi bi-key-fill input-icon"></i>
                                    <input class="form-control" type="password" placeholder="Confirmar contraseña" asp-for="ConfirmarContrasena" required />
                                    <span asp-validation-for="ConfirmarContrasena" class="text-danger small"></span>
                                </div>

                                <div class="d-flex justify-content-between mt-4">
                                    <button type="button" class="btn btn-secondary-outline" onclick="prevStep(2)">
                                        <i class="bi bi-arrow-left-short me-2"></i> Anterior
                                    </button>
                                    <button type="submit" class="btn btn-action">
                                        <i class="bi bi-send-fill me-2"></i> Registrarse
                                    </button>
                                </div>
                            </div>

                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger alert-custom mt-3" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewData["Mensaje"]
                                </div>
                            }

                            <div class="text-center mt-4">
                                <span class="text-muted">¿Ya tienes cuenta?</span>
                                <a class="register-link ms-1" asp-controller="Acceso" asp-action="Login">Inicia sesión aquí</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-lg-6 login-image d-none d-lg-flex">
                    <img src="~/img/3.jpg" alt="EduBank Registro" class="floating" />
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>




    <script>
        AOS.init({ duration: 1000, once: true });

        // --- Lógica del Registro en 2 Pasos (Sin Cambios) ---
        const totalSteps = 2;

        function updateStep(step) {
            for (let i = 1; i <= totalSteps; i++) {
                document.getElementById('step-' + i).classList.remove('active');
                document.getElementById('step-' + i + '-circle').classList.remove('active');
            }

            document.getElementById('step-' + step).classList.add('active');
            document.getElementById('step-' + step + '-circle').classList.add('active');

            if (step > 1) {
                document.getElementById('step-1-line').classList.add('completed');
            } else {
                document.getElementById('step-1-line').classList.remove('completed');
            }
        }

        function validateStep(step) {
            let isValid = true;
            const stepDiv = document.getElementById('step-' + step);
            const inputs = stepDiv.querySelectorAll('input[required]');

            inputs.forEach(input => {
                if (!$(input).valid()) {
                    isValid = false;
                }
            });
            return isValid;
        }

        function nextStep(currentStep) {
            if (validateStep(currentStep)) {
                updateStep(currentStep + 1);
            }
        }

        function prevStep(currentStep) {
            updateStep(currentStep - 1);
        }

        // Toggle para mostrar/ocultar Contraseña
        document.getElementById('password-toggle-reg').addEventListener('click', function() {
            const passwordField = document.getElementById('password-field-reg');
            const icon = this.querySelector('i');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    </script>
</body>
</html>