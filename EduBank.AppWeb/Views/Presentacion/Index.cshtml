@{
    ViewData["Title"] = "EduBank - Tu Gestión Financiera Personal";
    Layout = "_LayoutPresentation"; // Layout especial sin sidebar
}

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-80">
            <div class="col-lg-6">
                <div class="mb-4">
                    <i class="fas fa-university display-1 mb-3 opacity-75"></i>
                    <h1 class="display-4 fw-bold mb-3">Toma el control de tus <span class="text-warning">finanzas</span></h1>
                    <p class="lead mb-4 opacity-90">
                        EduBank es tu aliado perfecto para gestionar ingresos, gastos y alcanzar
                        tus metas financieras. Simple, seguro y diseñado para ti.
                    </p>
                </div>

                <div class="d-flex flex-column flex-sm-row gap-3">
                    <a href="@Url.Action("Login", "Acceso")" class="btn btn-warning btn-lg px-4 py-2 fw-bold">
                        <i class="fas fa-rocket me-2"></i>¡Comenzar Ahora!
                    </a>
                    <a href="#caracteristicas" class="btn btn-outline-light btn-lg px-4 py-2">
                        <i class="fas fa-info-circle me-2"></i>Más Información
                    </a>
                </div>

                <!-- Stats Mini -->
                <div class="row mt-5 pt-3">
                    <div class="col-4 text-center">
                        <h3 class="fw-bold text-warning">100%</h3>
                        <small class="opacity-90">Gratuito</small>
                    </div>
                    <div class="col-4 text-center">
                        <h3 class="fw-bold text-warning">+500</h3>
                        <small class="opacity-90">Usuarios</small>
                    </div>
                    <div class="col-4 text-center">
                        <h3 class="fw-bold text-warning">24/7</h3>
                        <small class="opacity-90">Disponible</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="mockup-device mt-4">
                    <img src="https://cdn.pixabay.com/photo/2016/11/19/14/00/code-1839406_1280.jpg"
                         class="img-fluid rounded-3 shadow-lg"
                         alt="Dashboard EduBank"
                         style="max-height: 400px;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Características -->
<section id="caracteristicas" class="py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold text-dark mb-3">¿Por qué elegir EduBank?</h2>
                <p class="lead text-muted">Todas las herramientas que necesitas en un solo lugar</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 transition-all">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-chart-pie text-primary fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Control Total</h4>
                        <p class="text-muted">
                            Monitorea cada movimiento, categoriza tus gastos y visualiza
                            tu progreso financiero con gráficos intuitivos.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 transition-all">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-wallet text-success fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Múltiples Cuentas</h4>
                        <p class="text-muted">
                            Gestiona todas tus cuentas bancarias, tarjetas y efectivo
                            en una plataforma unificada y segura.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 transition-all">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-shield-alt text-info fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">100% Seguro</h4>
                        <p class="text-muted">
                            Tus datos están protegidos con encriptación avanzada.
                            Tu privacidad es nuestra prioridad.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-dark text-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="display-6 fw-bold mb-3">¿Listo para transformar tu vida financiera?</h2>
                <p class="lead mb-4 opacity-90">
                    Únete a la comunidad EduBank y descubre el poder de tener el control
                    total sobre tu dinero.
                </p>
                <a href="@Url.Action("Login", "Acceso")" class="btn btn-warning btn-lg px-5 py-3 fw-bold">
                    <i class="fas fa-play me-2"></i>Empezar Mi Viaje Financiero
                </a>
                <div class="mt-3">
                    <small class="opacity-75">Es completamente gratis • Sin tarjetas de crédito • Configuración en 2 minutos</small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer Simple -->
<footer class="py-4 bg-black text-white-50">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <p class="mb-0">&copy; 2025 EduBank. Todos los derechos reservados.</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a href="@Url.Action("Privacy", "Home")" class="text-white-50 text-decoration-none me-3">Privacidad</a>
                <a href="@Url.Action("Login", "Acceso")" class="text-white-50 text-decoration-none">Admin</a>
            </div>
        </div>
    </div>
</footer>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
    }

    .min-vh-80 {
        min-height: 80vh;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }

    .card:hover .feature-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .mockup-device img {
        border: 8px solid #fff;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }
</style>